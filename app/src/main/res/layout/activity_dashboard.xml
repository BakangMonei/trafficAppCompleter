<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_blue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jovanovic.stefan.sqlitetutorial.DashboardActivity">

    <!--MainMenu TextView-->
    <!-- For email-->

    <!--Log Out Button-->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="132dp"
        android:text="Main Menu"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="62dp"
        android:hint="email here"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/logOut"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/textView1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/untitled_org" />


    <!--Incident -->

    <TextView
        android:id="@+id/logOutTextView"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logOut"
        android:layout_alignParentStart="true"
        android:layout_marginStart="94dp"
        android:layout_marginTop="2dp"
        android:text="logOut"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/viewIncidents"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/textView1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="90dp"
        app:srcCompat="@drawable/briefcase" />

    <!--Location-->

    <TextView
        android:id="@+id/viewIncidentsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewIncidents"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="109dp"
        android:text="View"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/mapLocation"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/logOutTextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/map_location" />

    <TextView
        android:id="@+id/mapLocationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mapLocation"
        android:layout_alignParentStart="true"
        android:layout_marginStart="98dp"
        android:layout_marginTop="2dp"
        android:text="Location"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/deleteImageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/viewIncidentsTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="90dp"
        app:srcCompat="@drawable/delete_icon" />

    <TextView
        android:id="@+id/delIncidentsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deleteImageView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="105dp"
        android:text="Delete"
        android:textAlignment="center"
        android:textColor="@color/white" />


</RelativeLayout>
